@model Order

@{
    ViewData["Title"] = "Złóż zamówienie";
}

<h1>Złóż zamówienie</h1>
@if (ViewBag.Powiadomienie != null)
{
    <p>@ViewBag.Powiadomienie</p>
}
@using (Html.BeginForm("CreateOrder", "Cart", FormMethod.Post))
{
    <div class="form-group">        
        @Html.TextBoxFor(m => m.City, new { @class = "login-input", @placeholder = "Wpisz miasto" })
        @Html.ValidationMessageFor(m => m.City, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(m => m.Address, new { @class = "login-input", @placeholder = "Wpisz adres" })
        @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text-danger" })
    </div>

    <button type="submit" id="register-btn">Złóż zamówienie</button>
}