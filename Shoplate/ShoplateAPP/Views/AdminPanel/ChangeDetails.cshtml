@model Item

@if (Context.Session.GetString("IsAdmin") == "true")
{
<h2>Edycja szczegółów przedmiotu</h2>
<div class="container">
    @using (Html.BeginForm("ChangeDetails", "AdminPanel", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.TextBoxFor(model => model.Name, new { @class = "login-input", @placeholder="Nazwa"})
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="form-group">
            @Html.TextBoxFor(model => model.Description, new { @class = "login-input", @placeholder="Opis" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="form-group">
            @Html.TextBoxFor(model => model.Image, new { @class = "login-input", @placeholder="Zdjęcie" })
            @Html.ValidationMessageFor(model => model.Image)
        </div>

        <div class="form-group">
            @Html.TextBoxFor(model => model.Price, new { @class = "login-input", @placeholder="Cena" })
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <button type="submit" class="btn login-btn">Zapisz zmiany</button>
    }
</div>
}
else
{
    <h1>AJAJAJ</h1>
}