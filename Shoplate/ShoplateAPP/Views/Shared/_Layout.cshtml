<!DOCTYPE html>
<html lang="pl-PL">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoplateAPP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/ShoplateAPP.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black text-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Shoplate</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon navbar-dark"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav navbar-left">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Shop" asp-action="Index">Sklep</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">O nas</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav navbar-right">
                        @if (Context.Session.GetString("LoggedIn") == "true")
                        {
                            <li>
                                <a class="nav-link" style="color: #ff8514">Witaj, @Context.Session.GetString("Username")</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Account">Zarządzaj kontem</a>
                            </li>

                            @if (Context.Session.GetString("IsAdmin") != "true")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index">
                                        <i class="fa-solid fa-cart-shopping" style="color: #ffffff;"></i>
                                    </a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Logout">Wyloguj się</a>                            
                            </li>

                           }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Login">Zaloguj się</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index">
                                    <i class="fa-solid fa-cart-shopping" style="color: #ffffff;"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        @RenderSection("Banner", required: false)

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <footer class="mt-auto">
        <div class="container text-white">
            &copy; 2023 - Shoplate - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <div class="float-lg-end github-container">
               
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
